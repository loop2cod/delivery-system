  "shortcuts": [
    {
      "name": "My Deliveries",
      "short_name": "Deliveries",
      "description": "View assigned deliveries",
      "url": "/deliveries",
      "icons": [
        {
          "src": "/icons/deliveries-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Scan QR",
      "short_name": "Scan",
      "description": "Scan package QR code",
      "url": "/scan",
      "icons": [
        {
          "src": "/icons/scan-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Navigation",
      "short_name": "Navigate",
      "description": "Open GPS navigation",
      "url": "/navigation",
      "icons": [
        {
          "src": "/icons/navigation-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profile",
      "short_name": "Profile",
      "description": "View driver profile and stats",
      "url": "/profile",
      "icons": [
        {
          "src": "/icons/profile-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "background_sync": [
    {
      "tag": "location-sync",
      "options": {
        "minInterval": 60000
      }
    },
    {
      "tag": "delivery-status-sync",
      "options": {
        "minInterval": 30000
      }
    }
  ],
  "capture_links": "existing-client-navigate"
