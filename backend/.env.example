# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://delivery_user:delivery_pass_2025@localhost:5432/delivery_uae_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=delivery_uae_dev
DB_USER=delivery_user
DB_PASSWORD=delivery_pass_2025
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_2025

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# Email Configuration (SendGrid)
EMAIL_FROM=noreply@deliveryuae.com
SENDGRID_API_KEY=your-sendgrid-api-key

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=admin@deliveryuae.com

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SMS_PROVIDER_API_KEY=your-sms-provider-api-key
SMS_PROVIDER_URL=https://api.sms-provider.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# PWA Configuration
PWA_CACHE_TTL=86400
OFFLINE_SYNC_INTERVAL=60000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800000

# Business Rules
MAX_PACKAGES_PER_REQUEST=20
MAX_DELIVERY_DISTANCE_KM=500
PICKUP_WINDOW_HOURS=2

# Development/Testing
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=false
MOCK_EXTERNAL_SERVICES=true

# Webhook API Keys (comma-separated)
VALID_API_KEYS=your-webhook-api-key-1,your-webhook-api-key-2