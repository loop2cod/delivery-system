{
  "name": "@delivery-uae/backend",
  "version": "1.0.0",
  "description": "Unified backend API for UAE Delivery Management PWAs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:seed": "node dist/scripts/seed.js"
  },
  "dependencies": {
    "@delivery-uae/shared": "workspace:*",
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/cookie": "^9.1.0",
    "@fastify/websocket": "^8.3.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "web-push": "^3.6.6",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.14",
    "@types/web-push": "^3.6.3",
    "@types/qrcode": "^1.5.5",
    "@types/jest": "^29.5.8",
    "typescript": "^5.2.2",
    "tsx": "^4.1.2",
    "tsc-alias": "^1.8.8",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}