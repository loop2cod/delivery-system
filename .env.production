# UAE Delivery Management System - Production Environment Variables

# Application
NODE_ENV=production
APP_NAME="UAE Delivery Management System"
APP_VERSION=1.0.0
PORT=3000

# MongoDB Configuration (matches docker-compose.yml)
MONGODB_URL=mongodb://admin:password123@mongodb:27017/grs_delivery?authSource=admin
MONGODB_URI=mongodb://admin:password123@mongodb:27017/grs_delivery?authSource=admin
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB_NAME=grs_delivery
MONGODB_USER=admin
MONGODB_PASSWORD=password123
MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=50

# Redis Configuration (matches docker-compose.yml)
REDIS_URL=redis://:redis123@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
CORS_ORIGINS=https://grsdeliver.com,https://admin.grsdeliver.com,https://business.grsdeliver.com,https://driver.grsdeliver.com

# PWA URLs
NEXT_PUBLIC_API_URL=https://api.grsdeliver.com
NEXT_PUBLIC_WS_URL=wss://api.grsdeliver.com

# Security
BCRYPT_ROUNDS=12
TRUST_PROXY=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Push Notifications (placeholder - replace with actual keys)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=admin@grsdeliver.com

# External Services (placeholders)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
SMS_PROVIDER_API_KEY=your_sms_provider_api_key

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# Features
ENABLE_SWAGGER=false
ENABLE_PLAYGROUND=false
ENABLE_METRICS=true
MOCK_EXTERNAL_SERVICES=false