# UAE Delivery Management System - Environment Variables

# Application
NODE_ENV=development
APP_NAME="UAE Delivery Management System"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://delivery_user:delivery_pass@localhost:5432/delivery_management
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT & Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
COOKIE_SECRET=your_super_secret_cookie_key_change_in_production

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0
API_RATE_LIMIT=100
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# PWA URLs
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000
NEXT_PUBLIC_PUBLIC_PWA_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_PWA_URL=http://localhost:3002
NEXT_PUBLIC_BUSINESS_PWA_URL=http://localhost:3003
NEXT_PUBLIC_DRIVER_PWA_URL=http://localhost:3004

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@deliveryuae.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="UAE Delivery <noreply@deliveryuae.com>"

# SMS Configuration (UAE)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+971xxxxxxxxx

# File Storage
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=delivery-uae-files

# Google Maps (for Driver PWA)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Payment Gateway (UAE)
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true

# Production
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
TRUST_PROXY=true